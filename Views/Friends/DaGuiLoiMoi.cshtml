@using GameWeb_XL.Models
@model List<NguoiChoi>
@{
    Layout = null;
}
<div class="well well-sm text-left">
    <strong><h3>You Request</h3></strong>
</div>
<div class="row list-group">
    @foreach (NguoiChoi it in @Model)
    {
        <div class="item  col-xs-3 col-lg-3">
            <div class="thumbnail">
                <a href="/Detail/Details/@it.Ten">
                    <img class="group list-group-image" src="@it.HinhAnh" alt="User Name" width="300">
                </a>
                <div class="caption">
                    <h4 class="group inner list-group-item-heading"> @it.Ten</h4>
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <p class="lead"> @it.CapDo</p>
                        </div>
                        <div class="col-xs-12 col-md-6">
                            <a class="btn btn-success" href="@Url.Action("HuyYeuCau", "Friends", new { Ten1 = @Request.Cookies["userID"].Value, Ten2 = it.Ten })">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>


